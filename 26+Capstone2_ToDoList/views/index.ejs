<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>To Do List App</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="" />
  <link
  href="https://fonts.googleapis.com/css2?family=Gochi+Hand&amp;family=Work+Sans:wght@700&amp;display=swap"
  rel="stylesheet"
  />
  <link rel="stylesheet" href="/styles/layout.css" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
</head>

<body>
  <div id="navbar">
    <img src="/images/tgban.png" alt="logo" />
    <ul id="nav">
      <li>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          class="bi bi-calendar-event"
          viewBox="0 0 16 16"
        >
          <path
            d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z"
          ></path>
          <path
            d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"
          ></path>
        </svg
        ><a href="/" style="text-decoration: none"> #Today</a>
      </li>
      <li>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          class="bi bi-box"
          viewBox="0 0 16 16"
        >
          <path
            d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5 8 5.961 14.154 3.5 8.186 1.113zM15 4.239l-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923l6.5 2.6zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464L7.443.184z"
          ></path></svg
        ><a href="/work" style="text-decoration: none"> #Work</a>
      </li>
    </ul>
  </div>

  <section id="notepad">
    <div id="pad">
      <div class="heading"><h1><%= name %> List</h1></div>
      <form action="/" method="post" class="input">
        <input type="text" name="title" value="<%= name %>" hidden />
        <input
          type="text"
          name="listItem"
          id="input"
          placeholder="New item"
          required=""
        />
        <button>+</button>
      </form>
   

      <div class="worklist">
        <% for(let i = 0; i<todos.length; i++) { %>  
          <div id="list">
            <input type="checkbox" class="cbox<%= i %>" value="checkbox<%= i %>" />
            <form action="/clear" method="post" class="delete">
              <input type="text" name="title" value="<%= name %>" hidden />
              <input type="hidden" name="clearListItem" value="<%= todos[i] %>">
              <button class="delete">‚ùå</button>
            </form>
            <label for="cbox<%= i %>" id="cbox<%= i %>"><%= todos[i] %></label>
          </div>
        <% } %>
      </div>
    </div>
      </form>
  </section>
  <script>

    $("input[type=checkbox]").on("click", function () {
      var idLabel = $(this).attr("class");
      $(`#${idLabel}`).toggleClass("completed");
    });
  </script>
</body>
